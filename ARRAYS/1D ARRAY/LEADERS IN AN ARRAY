//to find the leaders in an array (elements on the right of leaders are smaller that it)
//time complexity: O(n)
//space complexity: O(1)
#include<bits/stdc++.h>
using namespace std;

class Solution {
    // Function to find the leaders in the array.
  public:
    vector<int> leaders(vector<int>& arr) {
        // Code here
        int n=arr.size();
        vector<int>ans;
        int maxi=INT_MIN;
        for(int i=n-1;i>=0;i--){
            if(arr[i]>=maxi){
                ans.push_back(arr[i]);
            }
            maxi=max(arr[i],maxi);
        }
        reverse(ans.begin(),ans.end());
        return ans;
    }
};
