//lc-2149
//to rearrange the elements of an array by their sign
//Time Complexity: O(n)
//Space Complexity: O(1)
#include<bits/stdc++.h>
using namespace std;
class Solution {
public:
    vector<int> rearrangeArray(vector<int>& nums) {
        int n=nums.size();
        int pindex=0,nindex=1;
        vector<int>ans(n,0);
        for(int i=0;i<n;i++){
            if(nums[i]>0){
                ans[pindex]=nums[i];
                pindex+=2;
            }
            else{
                ans[nindex]=nums[i];
                nindex+=2;
            }
        }
        return ans;
    }
};