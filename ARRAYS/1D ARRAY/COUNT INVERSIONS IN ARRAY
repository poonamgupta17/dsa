//to count inversions in an array using merge sort
//tc=O(nlogn)
//sc=O(n)
#include <iostream>
#include <vector>
using namespace std;
class Solution {
  public:
  int merge(vector<int> &arr,int low,int mid,int high){
      vector<int>temp;
      int left=low;
      int right=mid+1;
      int cnt=0;
      while(left<=mid && right<=high){
          if(arr[left]<=arr[right]){
              temp.push_back(arr[left]);
              left++;
          }
          else{
              temp.push_back(arr[right]);
              cnt+=(mid-left+1);
              right++;
          }
      }
      while(right<=high){
          temp.push_back(arr[right]);
          right++;
      }
      while(left<=mid){
          temp.push_back(arr[left]);
          left++;
      }
      for(int i=low;i<=high;i++){
          arr[i]=temp[i-low];
          
      }
      return cnt;
  }
  int merge_sort(vector<int> &arr,int low,int high){
      int cnt=0;
      if(low>=high)return cnt;
      int mid=(low+high)/2;
      cnt+=merge_sort(arr,low,mid); //left half
      cnt+=merge_sort(arr,mid+1,high); //right half
      cnt+=merge(arr,low,mid,high); //merging sorted halves
      return cnt;
  }
    int inversionCount(vector<int> &arr) {
        // Code Here
        int n=arr.size();
        return merge_sort(arr,0,n-1);
    }
};