//LC 34. Find First and Last Position of Element in Sorted Array

//using binary search and lower bound and upper bound concept
//tc=o(logn)
//sc=o(1)
#include<bits/stdc++.h>
using namespace std;
class Solution {
public:
 int lowerBound(vector<int>& arr, int target,int n) {
        // code here
        int low=0;
        int high=n-1;
        int ans=n;
        while(low<=high){
            int mid=low+(high-low)/2;
            if(arr[mid]>=target){
                ans=mid;
                high=mid-1;
            }
            else{
                low=mid+1;
            }
        }
        return ans;
    }
    int upperBound(vector<int>& arr, int target,int n) {
        // code here
        int low=0;
        int high=n-1;
        int ans=n;
        while(low<=high){
            int mid=low+(high-low)/2;
            if(arr[mid]>target){
                ans=mid;
                high=mid-1;
            }
            else{
                low=mid+1;
            }
        }
        return ans;
    }
    vector<int> searchRange(vector<int>& nums, int target) {
        int n=nums.size();
        int lb=lowerBound(nums,target,n);
        if( n==0 || lb==n || nums[lb]!=target)return {-1,-1};
        return{lb,upperBound(nums,target,n)-1};
    }
};

//using binary search twice
//tc=o(logn)
//sc=o(1)
class Solution {
public:
    int first(vector<int>&nums,int target,int n){
        int low=0;
        int high=n-1;
        int first=-1;
        while(low<=high){
            for(int i=0;i<n;i++){
                int mid=low+(high-low)/2;
            
                if(nums[mid]==target){
                    first=mid;
                    high=mid-1;
                }
                else if(nums[mid]>target){
                    high=mid-1;
                }
                else{
                    low=mid+1;
                }
            }
        }
        return first;
    }
    int last(vector<int>&nums,int target,int n){
        int low=0;
        int high=n-1;
        int last=-1;
        while(low<=high){
            for(int i=0;i<n;i++){
                int mid=(low+high)/2;
                if(nums[mid]==target){
                    last=mid;
                    low=mid+1;
                }
                else if(nums[mid]>target){
                    high=mid-1;;
                }
                else{
                    low=mid+1;
                }
            }
        }
        return last;
    }
    vector<int> searchRange(vector<int>& nums, int target) {
        int n=nums.size();
        if(n==0)return{-1,-1};
        int f=first(nums,target,n);
        if(f==-1)return{-1,-1};
        int l=last(nums,target,n);
        
        return{f,l};
    }
};